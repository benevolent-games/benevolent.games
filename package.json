{
	"private": true,
	"name": "benevolent.games",
	"version": "0.0.0-dev.1",
	"description": "",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"files": [],
	"scripts": {
		"build": "run-s clean && run-p importmap links copy compile-typescript && run-p test compress-textures compile-bundle web",
		"clean": "rimraf x && mkdirp x",
		"links": "run-s link-s link-node_modules",
		"link-s": "ln -s \"$PWD/s\" x/s",
		"link-node_modules": "ln -s \"$PWD/node_modules\" x/node_modules",
		"importmap": "importly < package-lock.json > x/importmap.json",
		"copy": "run-p copy-assets copy-metas",
		"copy-assets": "ln -s \"$PWD/assets\" x/assets",
		"copy-metas": "cp CNAME x/ && touch x/.nojekyll",
		"compress-textures": "run-s compress-textures-0 compress-textures-1",
		"compress-textures-0": "jpegger --indir assets/textures --outdir x/textures/lod0 --quality 70 --size 1024",
		"compress-textures-1": "jpegger --indir assets/textures --outdir x/textures/lod1 --quality 40 --size 256",
		"compile-typescript": "tsc",
		"compile-bundle": "run-s compile-bundle-rollup compile-bundle-minify",
		"compile-bundle-rollup": "rollup --silent --sourcemap -p rollup-plugin-sizes -p @rollup/plugin-node-resolve -f iife -i x/main.js -o x/main.bundle.js",
		"compile-bundle-minify": "terser x/main.bundle.js -cm --source-map --comments false -o x/main.bundle.min.js",
		"web": "node x/web/build.js",
		"web-debug": "node x/web/build.js debug",
		"watch-typescript": "npm run -s compile-typescript -- -w",
		"watch-bundle": "npm run -s compile-bundle-rollup -- -w",
		"watch-web": "chokidar \"x/web/**/*.js\" -c \"npm run web-debug -s && echo 'rebuilt web'\"",
		"watch": "run-s web-debug && run-p watch-typescript watch-bundle watch-web",
		"test": "cynic node --label='test suite' x/tests.test.js",
		"start": "http-server x"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.1.3",
		"chokidar-cli": "^3.0.0",
		"cynic": "0.1.0-dev.16",
		"http-server": "^14.1.0",
		"importly": "^0.2.0",
		"jpegger": "^0.1.3",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"rollup": "^2.67.0",
		"serve": "^13.0.2",
		"terser": "^5.10.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"ammo.js": "github:kripken/ammo.js",
		"ammojs-typed": "1.0.6",
		"babylonjs": "5.0.0-alpha.65",
		"babylonjs-loaders": "5.0.0-alpha.65",
		"babylonjs-materials": "5.0.0-alpha.65",
		"es-module-shims": "^1.4.3",
		"import": "^0.0.6",
		"lit": "^2.1.2",
		"rollup-plugin-sizes": "^1.0.4",
		"xiome": "^0.0.20"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/benevolent.games.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/benevolent.games/issues"
	},
	"homepage": "https://github.com/chase-moskal/benevolent.games#readme"
}
