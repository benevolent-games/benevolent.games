{
	"compilerOptions": {
		"rootDir": "s",
		"outDir": "x",
		"target": "es2018",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": [
		"s/**/*.ts",
		"s/**/*.js"
	],
	"exclude": [
		"s/**/_*"
	],
}
